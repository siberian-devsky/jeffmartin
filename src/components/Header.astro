---
import "../styles/global.css"
---

<div id="intro" class="mx-6 flex flex-col gap-4">
    <p id="title" class="opacity-0 font-semibold text-xl md:text-2xl lg:text-4xl">Hi There.</p>
    <p id="subtitle" class="uppercase opacity-0 font-bold text-xl md:text-4xl lg:text-6xl">
        I'm Jeff And Here's<br>What I Know</p>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const title: HTMLElement|null = document.getElementById('title')
        const subtitle: HTMLElement|null = document.getElementById('subtitle')
        const transitionClasses: string[] = ["transform", "opacity-100", "transition-all", "duration-1500", "linear"]
        if (title) {
            setTimeout(() => {
                title.classList.add(...transitionClasses)
            }, 500)
        } else {
            console.error(`Title not found. Got ${title} instead`)
        }

        if (subtitle) {
            setTimeout(() => {
                subtitle.classList.add(...transitionClasses)
            }, 1000);
        } else {
            console.error(`Subtitle not found. Got ${subtitle} instead`)
        }
    })
</script>