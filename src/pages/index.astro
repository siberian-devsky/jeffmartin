---
import Layout from '../layouts/Layout.astro';
import Intro from "../components/Intro.astro"
import Headliners from '../components/Headliners.astro';

export const prerender = true;
---

<Layout title="Jeff Martin">
  <main class="container mx-auto px-4 py-8">
	<Intro />
    <div 
      id="headliners" 
      class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8 w-auto h-full m-20
             text-lg md:text-2xl lg:text-4xl opacity-0 transform scale-90 
             transition-all duration-700"
    >
      <Headliners/>
    </div>
  </main>
</Layout>

<script>
  // Animation script to reveal the cards
  document.addEventListener('DOMContentLoaded', () => {
    const headliners = document.getElementById('headliners');
    
    // Small delay before starting animation
    setTimeout(() => {
      if (headliners) {
        headliners.classList.remove('opacity-0', 'scale-90');
        headliners.classList.add('opacity-100', 'scale-100');
      }
    }, 300);
  });
</script>
