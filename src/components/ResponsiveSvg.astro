---
interface Props {
  src: string;
  alt: string;
  className?: string;
}

const { src, alt, className = "" } = Astro.props;
---

<div class={`svg-container flex items-center justify-center ${className}`}>
  <img 
    src={src || "/placeholder.svg"} 
    alt={alt}
    class="max-w-full max-h-full object-contain"
    style="filter: var(--svg-filter);"
  />
</div>

<style>
  .svg-container {
    width: 100%;
    height: 100%;
    max-width: 72px;
    max-height: 72px;
  }

  @media (min-width: 640px) {
    .svg-container {
      max-width: 80px;
      max-height: 80px;
    }
  }

  @media (min-width: 768px) {
    .svg-container {
      max-width: 96px;
      max-height: 96px;
    }
  }

  /* CSS variables for controlling SVG colors */
  :global(:root) {
    --svg-filter: invert(0%) sepia(0%) saturate(0%) hue-rotate(0deg) brightness(0.4) contrast(1);
  }
  
  :global(.dark) {
    --svg-filter: invert(100%) sepia(0%) saturate(0%) hue-rotate(0deg) brightness(0.7) contrast(1);
  }
</style>