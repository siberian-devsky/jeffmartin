---
import Layout from "../layouts/Layout.astro"
---
<Layout>
    <div class="flex flex-col h-screen items-center justify-center">
        <div id="nutrition" class="flex flex-col w-96 h-5/6 bg-white opacity-0
                text-black px-4 py-2 gap-x-0.5 overflow-y-scroll">
            <h1 class="text-4xl font-extrabold">Developer Facts</h1>
            <div class="w-full min-h-1 bg-black"></div>
            <h2 class="text-lg font-bold">Amount per serving</h2>
            <div class="flex flex-row justify-between">
                <h2 class="text-2xl font-bold">Experience</h2>
                <h2 class="text-3xl font-extrabold">20 Years</h2>
            </div>
            <div class="w-full min-h-2.5 bg-black"></div>
            <p class="font-bold text-right">% career value</p>
            <div class="w-full min-h-0.5 bg-black"></div>
            <!-- python -->
            <div class="flex flex-row justify-between">
                <h2 class="text-xl font-bold">Python <span class="font-medium">15y</span></h2>
                <h2 class="text-2xl font-extrabold">75%</h2>
            </div>
            <div class="w-full min-h-0.5 bg-black"></div>
            <!-- flask -->
            <div class="flex flex-row justify-between ps-8">
                <h2 class="text-lg font-bold italic">Flask <span class="font-medium">2y</span></h2>
                <h2 class="text-lg font-extrabold">10%</h2>
            </div>
            <div class="w-full min-h-0.5 bg-black"></div>
            <!-- fast api -->
            <div class="flex flex-row justify-between ps-8">
                <h2 class="text-lg font-bold italic">FastAPI <span class="font-medium">2y</span></h2>
                <h2 class="text-lg font-extrabold">10%</h2>
            </div>
            <div class="w-full min-h-1.5 bg-black"></div>
            <!-- web -->
            <div class="flex flex-row justify-between">
                <h2 class="text-xl font-bold">Web<sup>*</sup><span class="font-medium">5y</span></h2>
                <h2 class="text-2xl font-extrabold">25%</h2>
            </div>
            <div class="w-full min-h-0.5 bg-black"></div>
            <!-- html -->
            <div class="flex flex-row justify-between ps-8">
                <h2 class="text-lg font-bold italic">HTML <span class="font-medium">5y</span></h2>
                <h2 class="text-lg font-extrabold">25%</h2>
            </div>
            <div class="w-full min-h-0.5 bg-black"></div>
            <!-- js/ts -->
            <div class="flex flex-row justify-between ps-8">
                <h2 class="text-lg font-bold italic">JS/TS <span class="font-medium">5y</span></h2>
                <h2 class="text-lg font-extrabold">25%</h2>
            </div>
            <div class="w-full min-h-0.5 bg-black"></div>
            <!-- various frameworks -->
            <div class="flex flex-row justify-between ps-3">
                <h2 class="text-lg font-bold italic">Frameworks/Libs <span class="font-medium">2y</span></h2>
                <h2 class="text-lg font-extrabold">10%</h2>
            </div>
            <div class="w-full min-h-0.5 bg-black"></div>
            <div class="flex flex-row justify-between ps-8">
                <h2 class="text-lg font-bold italic">Angular <span class="font-medium">2y</span></h2>
                <h2 class="text-lg font-extrabold">10%</h2>
            </div>
            <div class="w-full min-h-0.5 bg-black"></div>
            <div class="flex flex-row justify-between ps-8">
                <h2 class="text-lg font-bold italic">React <span class="font-medium">2y</span></h2>
                <h2 class="text-lg font-extrabold">10%</h2>
            </div>
            <div class="w-full min-h-0.5 bg-black"></div>
            <div class="flex flex-row justify-between ps-8">
                <h2 class="text-lg font-bold italic">Astro <span class="font-medium">2y</span></h2>
                <h2 class="text-lg font-extrabold">10%</h2>
            </div>
            <div class="w-full min-h-1.5 bg-black"></div>
            <!-- support skills -->
            <div class="flex flex-row justify-between">
                <h2 class="text-xl font-bold">Suport Skills<sup>*</sup> <span class="font-medium">20y</span></h2>
                <h2 class="text-2xl font-extrabold">100%</h2>
            </div>
            <div class="w-full min-h-0.5 bg-black"></div>
            <!-- jira -->
            <div class="flex flex-row justify-between ps-8">
                <h2 class="text-lg font-bold italic">Jira <span class="font-medium">15y</span></h2>
                <h2 class="text-lg font-extrabold">75%</h2>
            </div>
            <div class="w-full min-h-0.5 bg-black"></div>
            <!-- git -->
            <div class="flex flex-row justify-between ps-8">
                <h2 class="text-lg font-bold italic">Git <span class="font-medium">15Y</span></h2>
                <h2 class="text-lg font-extrabold">75%</h2>
            </div>
            <div class="w-full min-h-0.5 bg-black"></div>
            <!-- cicd -->
            <div class="flex flex-row justify-between ps-8">
                <h2 class="text-lg font-bold italic">CI/CD <span class="font-medium">3y</span></h2>
                <h2 class="text-lg font-extrabold">15%</h2>
            </div>
            <div class="w-full min-h-0.5 bg-black"></div>
            <!-- linux -->
            <div class="flex flex-row justify-between ps-8">
                <h2 class="text-lg font-bold italic">Linux <span class="font-medium">10y</span></h2>
                <h2 class="text-lg font-extrabold">50%</h2>
            </div>
            <div class="w-full min-h-1.5 bg-black"></div>
            <!-- soft skills -->
            <div class="flex flex-row justify-between">
                <h2 class="text-xl font-bold">Soft Skills <span class="font-medium">20y</span></h2>
                <h2 class="text-2xl font-extrabold">100%</h2>
            </div>
            <div class="w-full min-h-0.5 bg-black"></div>
            <!-- intern training -->
            <div class="flex flex-row justify-between ps-8">
                <h2 class="text-lg font-medium italic">Intern Training <span class="font-medium">3y</span></h2>
                <h2 class="text-lg font-extrabold">15%</h2>
            </div>
            <div class="w-full min-h-0.5 bg-black"></div>
            <!-- technobabble translation -->
            <div class="flex flex-row justify-between ps-8">
                <h2 class="text-lg font-medium italic">Technobabble âž¡ English <span class="font-medium">20y</span></h2>
                <h2 class="text-lg font-extrabold">100%</h2>
            </div>
            <div class="w-full min-h-0.5 bg-black"></div>
            <!-- presentation -->
            <div class="flex flex-row justify-between ps-8">
                <h2 class="text-lg font-medium italic">Public Speaking <span class="font-medium">15y</span></h2>
                <h2 class="text-lg font-extrabold">75%</h2>
            </div>
            <div class="w-full min-h-2.5 bg-black"></div>
            <div class="px-4">
                <p class="text-center"><sup>*</sup>Values based on varous tasks throughout career. Your technical needs may vary</p>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const label: HTMLElement|null = document.getElementById("nutrition");
            const transitionClasses: string[] = ['transform', 'transition-all', 'opacity-100', 'duration-1000']
            label?.classList.add(...transitionClasses)
        })
    </script> 
</Layout>