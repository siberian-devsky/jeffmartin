---
import Layout from '../layouts/Layout.astro';
import Intro from "../components/Intro.astro"
import Headliners from '../components/Headliners.astro';
---

<Layout>
	<div class="h-screen w-full">
		<div id="intro" class="h-auto w-full mx-6 flex flex-col gap-4">
			<Intro/>
		</div>
		<div id="headliners" class="h-2/3 mt-8 grid grid-cols-1 md:grid-cols-2
			w-full text-2xl lg:text-4xl opacity-0 gap-4 items-center 
			justify-center -translate-x-full">
			<Headliners/>
		</div>
	</div>
</Layout>
