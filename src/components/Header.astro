---
import '../styles/global.css'
const { rows, cols } = Astro.props;
---
<div class="h-screen w-screen p-5 flex-col items-center justify-center bg-slate-600">
    <section id="hero" class="h-1/3 w-full">
        <div id="intro">
            <p id="title" class="opacity-0 font-semibold text-6xl">Hi There</p>
            <p id="subtitle" class="opacity-0 font-bold text-8xl">I'm Jeff and I Fix Things</p>
        </div>
    </section>
    <section id="content" 
             class="h-2/3 text-xl lg:text-8xl border-orange-600 border-4 rounded-xl flex flex-col items-center justify-center"
        >
        <p class="uppercase">coming soonish</p><br>
        <p>🚧 🔧 ⚒️ 👨🏼‍💻 ⚙️ 🪓 🏗️</p>
    </section>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const title: HTMLElement|null = document.getElementById('title')
        const subtitle: HTMLElement|null = document.getElementById('subtitle')
        if (title) {
            setTimeout(() => {
                title.className = "transform font-semibold text-3xl opacity-100 transition-all duration-1200 linear"
            }, 500)
        } else {
            console.error(`Intro not found. Got ${title} instead`)
        }

        if (subtitle) {
            setTimeout(() => {
                subtitle.className = "transform font-bold text-5xl opacity-100 transition-all duration-1200 linear"
            }, 1000);
        }
    })
</script>