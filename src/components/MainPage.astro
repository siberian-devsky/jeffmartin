---
import Header from "./Header.astro"
import Card from "./Card.astro"

import automation from "../assets/automation.svg"
import github from "../assets/github.svg"
import python from "../assets/python.svg"
import web from "../assets/web.svg"

---
<main class="h-full">
	<section id="hero" class="h-1/3 w-full">
		<Header/>
	</section>
	<section id="techstack" class="grid grid-cols-2 h-2/3 w-full text-2xl lg:text-4xl opacity-0 translate-y-full">
		<Card name="github" svg={github}/>
		<Card name="python" svg={python}/>
		<Card name="web" svg={web}/>
		<Card name="automation" svg={automation}/>
	</section>
</main>